{
  "name": "mammatus/cron",
  "description": "\u23f1\ufe0f Cron manager",
  "license": "MIT",
  "type": "composer-plugin",
  "require": {
    "php": "^8.4",
    "ext-json": "^8.4",
    "composer-plugin-api": "^2.0.0",
    "composer/composer": "^2.8.12",
    "mammatus/app": "dev-master",
    "mammatus/cron-attributes": "^2.0.1",
    "mammatus/cron-contracts": "^1.0.1",
    "mammatus/groups": "^0.1.0",
    "mammatus/kubernetes-attributes": "^1.0.0",
    "mammatus/kubernetes-contracts": "^1.0.0",
    "mammatus/kubernetes-events": "^3.0.0",
    "mammatus/life-cycle-events": "^2.3.0",
    "psr/container": "^1.1.2 || ^2.0.2",
    "psr/event-dispatcher": "^1.0.0",
    "psr/log": "^3.0.2",
    "react/async": "^4.3.0",
    "roave/better-reflection": "^6.65.0",
    "wyrihaximus/broadcast-contracts": "^1.3.0",
    "wyrihaximus/generative-composer-plugin-tooling": "^1.2.0",
    "wyrihaximus/monolog-factory": "^2.0.0",
    "wyrihaximus/psr-3-context-logger": "^3.0.0",
    "wyrihaximus/react-cron": "^5.3.0",
    "wyrihaximus/react-mutex-contracts": "^2.3.0",
    "wyrihaximus/ticking-promise": "^3.1.0"
  },
  "require-dev": {
    "react/promise-timer": "^1.11.0",
    "wyrihaximus/async-test-utilities": "^12.0.0",
    "wyrihaximus/makefiles": "^0.7.16"
  },
  "autoload": {
    "psr-4": {
      "Mammatus\\Cron\\": "src/",
      "Mammatus\\DevApp\\Cron\\": "etc/dev-app/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Mammatus\\Tests\\Cron\\": "tests/"
    }
  },
  "bin": [
    "bin/mammatus-cron"
  ],
  "config": {
    "allow-plugins": {
      "composer/package-versions-deprecated": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "drupol/composer-packages": true,
      "ergebnis/composer-normalize": true,
      "icanhazstring/composer-unused": true,
      "infection/extension-installer": true,
      "mammatus/app": true,
      "mammatus/groups": true,
      "mindplay/composer-locator": true,
      "phpstan/extension-installer": true,
      "wyrihaximus/broadcast": true,
      "wyrihaximus/composer-update-bin-autoload-path": true,
      "wyrihaximus/makefiles": true,
      "wyrihaximus/test-utilities": true
    },
    "platform": {
      "php": "8.4.13"
    },
    "sort-packages": true
  },
  "extra": {
    "class": "Mammatus\\Cron\\Composer\\CodeGenerator",
    "mammatus": {
      "cron": {
        "has-actions": true
      },
      "has-groups": true
    },
    "php-di-definitions": {
      "di": [
        "etc/di/*.php"
      ]
    },
    "wyrihaximus": {
      "broadcast": {
        "has-listeners": true
      }
    }
  },
  "scripts": {
    "post-install-cmd": [
      "make on-install-or-update || true"
    ],
    "post-update-cmd": [
      "make on-install-or-update || true"
    ],
    "pre-autoload-dump": [
      "Mammatus\\Cron\\Composer\\CodeGenerator::findActions"
    ],
    "generate-config": [
      "Mammatus\\Cron\\Composer\\CodeGenerator::findActions"
    ]
  }
}
